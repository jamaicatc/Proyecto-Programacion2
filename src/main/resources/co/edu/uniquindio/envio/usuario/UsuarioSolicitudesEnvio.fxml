<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.envio.viewcontroller.UsuarioSolicitudesEnvioViewController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="-16.0" prefHeight="549.0" prefWidth="920.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Solicitudes de Envío">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <VBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="Origen:" />
                                <TextField fx:id="txtOrigen" prefWidth="250.0" promptText="Dirección de origen" />
                                <Label text="Destino:" />
                                <TextField fx:id="txtDestino" prefWidth="250.0" promptText="Dirección de destino" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="Peso (Kg):" />
                                <TextField fx:id="txtPeso" prefWidth="100.0" promptText="Ej: 2.5" />
                                <Label text="Largo (cm):" />
                                <TextField fx:id="txtLargo" prefWidth="100.0" promptText="Ej: 30" />
                                <Label text="Ancho (cm):" />
                                <TextField fx:id="txtAncho" prefWidth="100.0" promptText="Ej: 20" />
                                <Label text="Alto (cm):" />
                                <TextField fx:id="txtAlto" prefWidth="100.0" promptText="Ej: 15" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="Tipo de Tarifa:" />
                                <ComboBox fx:id="cmbTipoTarifa" prefWidth="180.0" promptText="Seleccionar tarifa">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ComboBox>
                                <Label text="Costo del Envío:" />
                                <Label fx:id="lblCostoEnvio" text="0.00">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </VBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                    <children>
                        <Button fx:id="btnNuevaSolicitud" mnemonicParsing="false" onAction="#onNuevaSolicitud" text="Nueva Solicitud">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#onModificar" text="Modificar">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#onCancelar" text="Cancelar">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnRefrescar" mnemonicParsing="false" onAction="#onRefrescar" text="Refrescar">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                    <children>
                        <Label text="Filtros:" />
                        <Label text="Estado:" />
                        <ComboBox fx:id="cmbEstado" prefWidth="150.0" promptText="Seleccionar">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ComboBox>
                        <Label text="Fecha desde:" />
                        <DatePicker fx:id="dpFechaDesde">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </DatePicker>
                        <Label text="Hasta:" />
                        <DatePicker fx:id="dpFechaHasta">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </DatePicker>
                        <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#onBuscar" text="Buscar">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <TableView fx:id="tableEnvios" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tcIdEnvio" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="tcOrigen" prefWidth="112.0" text="Origen" />
                        <TableColumn fx:id="tcDestino" prefWidth="149.0" text="Destino" />
                        <TableColumn fx:id="tcPeso" prefWidth="142.0" text="Peso (Kg)" />
                        <TableColumn fx:id="tcEstado" prefWidth="136.0" text="Estado" />
                        <TableColumn fx:id="tcFecha" prefWidth="287.0" text="Fecha" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                    <children>
                        <Button fx:id="btnVerDetalle" mnemonicParsing="false" onAction="#onVerDetalle" text="Ver Detalle">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnExportarPdf" mnemonicParsing="false" onAction="#onExportarPdf" text="Exportar PDF">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnExportarCsv" mnemonicParsing="false" onAction="#onExportarCsv" text="Exportar CSV">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>