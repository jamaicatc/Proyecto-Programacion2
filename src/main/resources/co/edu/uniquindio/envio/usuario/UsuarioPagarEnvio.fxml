<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.envio.viewcontroller.UsuarioPagarEnvioViewController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>

                <!-- Título -->
                <Label text="Pagar Envío">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <TableView fx:id="tableEnviosPendientes" prefHeight="250.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tcIdEnvio" prefWidth="-1.0" text="ID" />
                        <TableColumn fx:id="tcFechaCreacion" prefWidth="-1.0" text="Fecha Creación" />
                        <TableColumn fx:id="tcFechaEntrega" prefWidth="-1.0" text="Fecha Entrega Estimada" />
                        <TableColumn fx:id="tcOrigenDestino" prefWidth="-1.0" text="Origen - Destino" />
                        <TableColumn fx:id="tcEstado" prefWidth="-1.0" text="Estado" />
                        <TableColumn fx:id="tcPeso" prefWidth="-1.0" text="Peso (kg)" />
                        <TableColumn fx:id="tcVolumen" prefWidth="-1.0" text="Volumen (m³)" />
                        <TableColumn fx:id="tcCosto" prefWidth="-1.0" text="Costo ($)" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>

                <!-- Botón de Actualizar Tabla -->
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnActualizarTabla" mnemonicParsing="false" onAction="#onActualizarTabla" text="Actualizar Tabla">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>

                <!-- Método de Pago -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Método de pago:" />
                        <ComboBox fx:id="cmbMetodoPago" prefWidth="200.0" promptText="Seleccionar">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ComboBox>
                        <Label fx:id="lblSaldo" text="Saldo: " />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtMontoRecarga" promptText="Monto a recargar" />
                        <Button fx:id="btnRecargar" mnemonicParsing="false" onAction="#onRecargar" text="Recargar Saldo">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
                <Button fx:id="btnPagar" mnemonicParsing="false" onAction="#onPagar" text="Pagar">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

            </children>
        </VBox>
    </children>
</AnchorPane>
