<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.envio.viewcontroller.UsuarioHistorialEnviosViewController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" text="Historial de Envios">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Fecha desde:" />
                  <DatePicker fx:id="dpFechaDesde" />
                  <Label layoutX="10.0" layoutY="10.0" text="Fecha hasta:" />
                  <DatePicker fx:id="dpFechaHasta" layoutX="38.0" layoutY="10.0" />
                  <Label layoutX="212.0" layoutY="10.0" text="Estado:" />
                  <ComboBox fx:id="cmbEstado" prefWidth="150.0" promptText="Seleccionar" />
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#onBuscar" text="Buscar" />
                  <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#onLimpiar" text="Limpiar Filtros" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <TableView prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="-1.0" text="Id Envio" />
                <TableColumn prefWidth="-1.0" text="Fecha" />
                  <TableColumn prefWidth="-1.0" text="Origen" />
                  <TableColumn prefWidth="-1.0" text="Destino" />
                  <TableColumn prefWidth="-1.0" text="Estado" />
                  <TableColumn prefWidth="-1.0" text="Costo" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnVerDetalles" mnemonicParsing="false" onAction="#onVerDetalles" text="Ver Detalles" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button fx:id="btnGenerarReportePdf" mnemonicParsing="false" onAction="#onGenerarReportePdf" text="Generar Reporte PDF" />
                  <Button fx:id="btnGenerarReporteCsv" mnemonicParsing="false" onAction="#onGenerarReporteCsv" text="Generar Reporte CSV" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
