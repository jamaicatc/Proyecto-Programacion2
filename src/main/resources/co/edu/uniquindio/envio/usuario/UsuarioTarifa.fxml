<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.envio.viewcontroller.UsuarioTarifaViewController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <Label text="Cotizar Tarifa de Envío">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Label text="Tipo de producto:" />
                    <RadioButton fx:id="rbtPaquete" text="Paquete">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </RadioButton>
                    <RadioButton fx:id="rbtDocumento" text="Documento">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </RadioButton>
                </children>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                    <Label text="Origen:" />
                    <TextField fx:id="txtOrigen" promptText="Ciudad de origen" HBox.hgrow="ALWAYS" />
                    <Label text="Destino:" />
                    <TextField fx:id="txtDestino" promptText="Ciudad de destino" HBox.hgrow="ALWAYS" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </HBox>
         <Separator prefWidth="200.0" />

            <VBox spacing="10.0">
                <children>
                    <Label text="Detalle del envío:" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Label text="Peso (kg):" />
                            <TextField fx:id="txtPeso" promptText="Ej: 2.5" HBox.hgrow="ALWAYS" />
                            <Label text="Dimensiones (cm):" />
                            <TextField fx:id="txtLargo" prefWidth="60.0" promptText="Largo" />
                            <TextField fx:id="txtAlto" prefWidth="60.0" promptText="Alto" />
                            <TextField fx:id="txtAncho" prefWidth="60.0" promptText="Ancho" />
                            <Label text="Cantidad:" />
                            <TextField fx:id="txtCantidad" prefWidth="80.0" promptText="Ej: 1 unidad" />
                        </children>
                    </HBox>
                </children>
            <padding>
               <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            </VBox>
         <Separator prefWidth="200.0" />

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                    <Label text="Prioridad del envío:" />
                    <ComboBox fx:id="cmbPrioridad" prefWidth="180.0" promptText="Seleccionar prioridad">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </ComboBox>
                </children>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                    <Label text="Servicios adicionales:" />
                    <CheckBox fx:id="chkFragil" text="Frágil">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </CheckBox>
                    <CheckBox fx:id="chkUrgente" text="Entrega urgente">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </CheckBox>
                </children>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </HBox>

            <Button fx:id="btnCotizar" mnemonicParsing="false" onAction="#onCotizar" text="Cotizar">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <TextArea fx:id="taResultado" editable="false" prefHeight="200.0" wrapText="true" VBox.vgrow="ALWAYS" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </children>
</AnchorPane>
