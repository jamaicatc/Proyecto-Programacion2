<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.envio.viewcontroller.AdminGestionAsignacionesViewController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Gestión de Envíos y Asignaciones">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Filtrar por estado:" />
                  <ComboBox fx:id="cmbFiltrarEstado" prefWidth="150.0" promptText="Seleccionar" HBox.hgrow="ALWAYS" />
                  <Label layoutX="10.0" layoutY="10.0" text="Repartidor:" />
                  <ComboBox fx:id="cmbRepartidor" layoutX="38.0" layoutY="10.0" prefWidth="150.0" promptText="Seleccionar" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#onBuscar" text="Buscar" />
                  <Button fx:id="btnReiniciarFiltros" mnemonicParsing="false" onAction="#onReiniciarFiltros" text="Reiniciar Filtros" />
               </children>
            </HBox>
            <TableView fx:id="tableEnviosAsignaciones" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="-1.0" text="ID Envio" />
                <TableColumn prefWidth="-1.0" text="Origen" />
                  <TableColumn prefWidth="-1.0" text="Destino" />
                  <TableColumn prefWidth="-1.0" text="Estado Actual" />
                  <TableColumn prefWidth="-1.0" text="Repartidor Asignado" />
                  <TableColumn prefWidth="-1.0" text="Fecha Creación" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnAsignarRepartidor" mnemonicParsing="false" onAction="#onAsignarRepartidor" text="Asignar Repartidor" />
                  <Button fx:id="btnReasignar" mnemonicParsing="false" onAction="#onReasignar" text="Reasignar" />
                  <Button fx:id="btnRegistrarIncidencia" mnemonicParsing="false" onAction="#onRegistrarIncidencia" text="Registrar Incidencia" />
                  <Button fx:id="btnActualizarEstado" mnemonicParsing="false" onAction="#onActualizarEstado" text="Actualizar Estado" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Tipo de Incidencia:" />
                  <ComboBox fx:id="cmbTipoIncidencia" prefWidth="150.0" promptText="Seleccionar" />
                  <Label layoutX="10.0" layoutY="10.0" text="Descripción:" />
                  <TextField fx:id="txtDescripcion" promptText="detalle breve" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnGuardarIncidencia" mnemonicParsing="false" onAction="#onGuardarIncidencia" text="Guardar Incidencia" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
