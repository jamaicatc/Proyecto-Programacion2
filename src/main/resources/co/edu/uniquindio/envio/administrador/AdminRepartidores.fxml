<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="545.0" prefWidth="722.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.envio.viewcontroller.AdminRepartidoresViewController">
    <children>
      <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Gestión de Repartidores">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                              <Label text="ID Repartidor:" />
                              <TextField fx:id="txtIdRepartidor" prefHeight="25.0" prefWidth="236.0" HBox.hgrow="ALWAYS" />
                              <Label text="Nombre: " />
                              <TextField fx:id="txtNombre" prefHeight="25.0" prefWidth="236.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                              <Label text="Documento:" />
                              <TextField fx:id="txtDocumento" prefHeight="25.0" prefWidth="236.0" HBox.hgrow="ALWAYS" />
                              <Label text="Teléfono:" />
                              <TextField fx:id="txtTelefono" prefHeight="25.0" prefWidth="236.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label text="Disponibilidad:" />
                        <ComboBox fx:id="cmbDisponibilidad" prefWidth="150.0" promptText="Seleccionar" HBox.hgrow="ALWAYS" />
                        <Label text="Zona:" />
                        <TextField fx:id="txtZona" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                              <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#onNuevoRepartidor" prefHeight="25.0" prefWidth="95.0" text="Nuevo" />
                              <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#onAgregarRepartidor" prefHeight="25.0" prefWidth="95.0" text="Agregar" />
                              <Button fx:id="btnActualizar" mnemonicParsing="false" onAction="#onActualizarRepartidor" prefHeight="25.0" prefWidth="95.0" text="Actualizar" />
                              <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#onEliminarRepartidor" prefHeight="25.0" prefWidth="95.0" text="Eliminar" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Separator prefWidth="200.0" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                        <TableView fx:id="tableRepartidor" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="tcIdRepartidor" prefWidth="-1.0" text="ID Repartidor" />
                                <TableColumn fx:id="tcNombre" prefWidth="-1.0" text="Nombre" />
                                <TableColumn fx:id="tcDocumento" prefWidth="-1.0" text="Documento" />
                                <TableColumn fx:id="tcTelefono" prefWidth="-1.0" text="Teléfono" />
                        <TableColumn fx:id="tcDisponibilidad" prefWidth="-1.0" text="Disponibilidad" />
                        <TableColumn fx:id="tcZona" prefWidth="-1.0" text="Zona" />
                            </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                        </TableView>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="btnActualizarTabla" mnemonicParsing="false" onAction="#onActualizarTabla" text="Actualizar Tabla" />
                        <Button fx:id="btnExportar" mnemonicParsing="false" onAction="#onExportar" text="Exportar" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
